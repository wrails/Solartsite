


<%= render 'layouts/flash_notice_alert' %>
<div class="container-index"> 
<%= render 'layouts/current_user' %> 
<br>
<br>
<h1>Messages</h1>
<br>
<div class="table-responsive">
  <table class="table">
    <br><br>
    <caption>List of users</caption>   
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Company</th>
        <th scope="col">Subject</th>
        <th scope="col">Phone</th>
        <th scope="col">Body</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
      <tbody>
        <% @form_messages.each do |form_message| %>
          <tr>
            <td><%= form_message.name %></td>
            <td><%= form_message.email %></td>
            <td><%= form_message.company %></td>
            <td><%= form_message.subject %></td>
            <td><%= form_message.phone %></td>
            <td><%= form_message.body %></td>       
            <td><%= link_to 'Show', form_message %></td>
            <td><%= link_to 'Edit', edit_form_message_path(form_message) %></td>
            <td><%= link_to 'Destroy', form_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
<br>
<%= render 'layouts/current_user' %> 
<br>
</div>
